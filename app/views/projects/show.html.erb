<div class="project">
  <div class="task-header">
    <h2>Project name: <%= @project.name %></h2>
    <%= link_to 'Change', edit_project_path(@project) %>
    |
    <%= link_to 'Delete', project_path(@project), method: :delete, data: {confirm: 'Are you sure?'} %>
    <p><%= @project.summary %> </p>
  </div>
  <div class="task">
    Tasks:
  </div>
</div>
<div class="task-body">
  <%= render 'task' %>
</div>
